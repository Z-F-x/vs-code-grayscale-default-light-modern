{
  // ////////////////////////////////// //
  //               Editor               //
  // ////////////////////////////////// //
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  // Allow quick navigation via Alt+Click for definitions
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.smoothScrolling": true,
  // Better minimap
  "editor.minimap.enabled": true,
  // Sticky scroll for functions/classes
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  // Word wrap improvements
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 180,
  // Display indentation guides
  "editor.guides.indentation": true,
  // Highlight current line
  "editor.renderLineHighlight": "all",
  // Format pasted code automatically
  "editor.formatOnPaste": true,
  "editor.cursorSmoothCaretAnimation": "off",
  // Show function signature help automatically while typing
  "editor.parameterHints.enabled": true,
  // Show suggestions even while typing in comments/strings
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  // Speed up IntelliSense response
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showWords": true,
  // Zoom with mouse wheel
  "editor.mouseWheelZoom": false,
  // Better suggestions
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.wordBasedSuggestions": "matchingDocuments",
  // Quick suggestions timing
  "editor.quickSuggestionsDelay": 100,
  "editor.semanticTokenColorCustomizations": {
    "[Default Light Modern]": {
      "enabled": true,
      "rules": {
        "*.declaration": { "bold": true }
      }
    }
  },
  "editor.language.colorizedBracketPairs": [],
  "editor.tabSize": 1,
  "editor.renderWhitespace": "none",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "search.showLineNumbers": true,
  "editor.lineNumbers": "relative",
  "files.autoSave": "onWindowChange",
  // ////////////////////////////////// //
  //             Breadcrumbs            //
  // ////////////////////////////////// //
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
