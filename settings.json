  "[json]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[jsonc]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.activityBar.location": "top",

  // ////////////////////////////////// //
  //       Token Color Customizations   //
  // ////////////////////////////////// //
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "punctuation.definition.block", // Curly braces {}
          "punctuation.definition.parameters", // Parentheses ()
          "punctuation.definition.array" // Square brackets []
        ],
        "settings": {
          "background": "#FFEB3B", // Light yellow background for matching brackets
          "border": "1px solid #FF6347" // Tomato red border for matching brackets
        }
      }
    ]
  },

  // ////////////////////////////////// //
  //       TODO/FIXME Highlighting      //
  // ////////////////////////////////// //
  "highlight.regexes": {
    "((?:\\{))": {
      // Regex matching only the opening curly brace `{`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `{`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },
    "((?:\\}))": {
      // Regex matching only the closing curly brace `}`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `}`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },
    "((?:\\())": {
      // Regex matching only the opening parenthesis `(`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `(`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },
    "((?:\\)))": {
      // Regex matching only the closing parenthesis `)`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `)`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },
    "((?:\\[))": {
      // Regex matching only the opening square bracket `[`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `[`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },
    "((?:\\]))": {
      // Regex matching only the closing square bracket `]`
      "decorations": [
        {
          "backgroundColor": "#ffffff", // Light Blue background for matched `]`
          "color": "#1f1f1f" // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff", // Light Blue background for the second match group
          "color": "#1f1f1f" // Dark text color for readability
        }
      ]
    },

    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *TODO(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#a5a5a5",
          "backgroundColor": "#a5a5a5",
          "color": "#ffffff",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#a5a5a5",
          "color": "#1f1f1f"
        }
      ]
    },

    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:FIXME|FIX|BUG|UGLY|DEBUG|HACK)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#ff0000",
          "backgroundColor": "#ff0000",
          "color": "#FFFFFF",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#ff0000",
          "color": "#FFFFFF"
        }
      ]
    },
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:REVIEW|OPTIMIZE|TSC)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#87CEFA",
          "backgroundColor": "#87CEFA",
          "color": "#FFFFFF",
          "fontWeight": "bold"
        },
        {
          "backgroundColor": "#87CEFA",
          "color": "#FFFFFF"
        }
