"editor.semanticTokenColorCustomizations": {
    "[Rouge]": {
        "enabled": true,
        "rules": {
            "*.declaration": { "bold": true }
        }
    }
},

    "editor.language.colorizedBracketPairs": [

    ],
  

    
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "punctuation.definition.block",        // Curly braces {}
              "punctuation.definition.parameters",    // Parentheses ()
              "punctuation.definition.array"          // Square brackets []
            ],
            "settings": {
              "background": "#FFEB3B",  // Light yellow background for matching brackets
              "border": "1px solid #FF6347" // Tomato red border for matching brackets
            }
          }
        ]
      },
      
    
    
    "editor.tabSize": 1,
    "editor.renderWhitespace": "none",
    "editor.wordWrap": "on",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingOvertype": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",

    "LineNumberDeco.foregroundColorOfRepeatingDigits": "#1b1b1b",
    "LineNumberDeco.centerColorOfRainbow": "#1b1b1b",
    "LineNumberDeco.activeForeground": "#dedede",
    "LineNumberDeco.foreground": "#505050",
    "search.showLineNumbers": true, 
    "editor.lineNumbers": "relative",
    "workbench.settings.applyToAllProfiles": [],
    "workbench.colorTheme": "Default Light Modern",
    "editor.bracketPairColorization.enabled": true,  // Enable colorization of bracket pairs
"editor.bracketPairColorization.activeScopeColor": "#ADD8E6",  // Light blue for active matched bracket



    
  "highlight.regexes": {
    "((?:\\{))": {  // Regex matching only the opening curly brace `{`
      "decorations": [
        {
          "backgroundColor": "#ffffff",     // Light Blue background for matched `{`
          "color": "#1f1f1f",                // Dark text color for readability
        },
        {
          "backgroundColor": "#ffffff",     // Light Blue background for the second match group
          "color": "#1f1f1f"                // Dark text color for readability
        }
      ]
    },
    "((?:\\}))": {  // Regex matching only the opening curly brace `{`
    "decorations": [
      {
        "backgroundColor": "#ffffff",     // Light Blue background for matched `{`
        "color": "#1f1f1f",                // Dark text color for readability
      },
      {
        "backgroundColor": "#ffffff",     // Light Blue background for the second match group
        "color": "#1f1f1f"                // Dark text color for readability
      }
    ],
    "((?:\\())": {  // Regex matching only the opening paranthesis `(`
    "decorations": [
      {
        "backgroundColor": "#ffffff",     // Light Blue background for matched `)`
        "color": "#1f1f1f",                // Dark text color for readability
      },
      {
        "backgroundColor": "#ffffff",     // Light Blue background for the second match group
        "color": "#1f1f1f"                // Dark text color for readability
      }
      ]
    },
    "((?:\\)))": {  // Regex matching only the closing paranthesis `)`
      "decorations": [
      {
      "backgroundColor": "#ffffff",     // Light Blue background for matched `)`
      "color": "#1f1f1f",                // Dark text color for readability
    },
    {
      "backgroundColor": "#ffffff",     // Light Blue background for the second match group
      "color": "#1f1f1f"                // Dark text color for readability
    }
  ]
},
},    
"((?:\\[))": {  // Regex matching only the opening curly brace `[`
  "decorations": [
    {
      "backgroundColor": "#ffffff",     // Light Blue background for matched `[`
      "color": "#1f1f1f",                // Dark text color for readability
    },
    {
      "backgroundColor": "#ffffff",     // Light Blue background for the second match group
      "color": "#1f1f1f"                // Dark text color for readability
    }
  ]
},
"((?:\\]))": {  // Regex matching only the opening curly brace `]`
  "decorations": [
  {
    "backgroundColor": "#ffffff",     // Light Blue background for matched `]`
    "color": "#1f1f1f",                // Dark text color for readability
  },
  {
    "backgroundColor": "#ffffff",     // Light Blue background for the second match group
    "color": "#1f1f1f"                // Dark text color for readability
  }
  ]
},
    
    
      
