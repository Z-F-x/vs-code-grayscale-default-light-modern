  // Centered editor layout
  "workbench.editor.centeredLayoutAutoResize": false,
  // Better status bar
  "workbench.statusBar.visible": true,
  // Tab improvements
  "workbench.editor.labelFormat": "short",
  "workbench.editor.pinnedTabSizing": "compact",
  // Smooth scrolling and animations
  "workbench.list.smoothScrolling": true,
  // ////////////////////////////////// //
  //              Explorer              //
  // ////////////////////////////////// //
  // Compact folders in the Explorer
  "explorer.compactFolders": false,
  // Open new tabs to the right of the active one
  "workbench.editor.openPositioning": "right",
  // Keep unsaved tabs open even after closing VSCode
  "files.hotExit": "onExitAndWindowClose",
  // Trim trailing whitespace on save
  "files.trimTrailingWhitespace": true,
  // Ensure newline at end of file
  "files.insertFinalNewline": true,
  // ////////////////////////////////// //
  //             Experimental           //
  // ////////////////////////////////// //
  // Inline error messages as decorators (less intrusive)
  "editor.inlineSuggest.enabled": true,
  // Allow multiple cursors to edit similar code (aka Linked Editing)
  "editor.linkedEditing": true,
  // Peek definitions instead of jumping
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",
  // ////////////////////////////////// //
  //              Navigation            //
  // ////////////////////////////////// //
  // Ctrl+Enter to run a command in the Command Palette
  "keyboard.dispatch": "keyCode",
  // Auto-reveal files in explorer
  "explorer.autoReveal": true,
  // Better file sorting
  "explorer.sortOrder": "type",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },
  // ////////////////////////////////// //
  //                Git                //
  // ////////////////////////////////// //
  "scm.diffDecorations": "all",
  "git.decorations.enabled": true,
  "git.timeline.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "git.autofetch": false,
  "git.confirmSync": false,
  // ////////////////////////////////// //
  //               Search               //
  // ////////////////////////////////// //
  // Exclude common files from search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.DS_Store": true
  },
  "search.smartCase": true,
  "search.globalFindClipboard": true,
  // ////////////////////////////////// //
  //              Debugging             //
  // ////////////////////////////////// //
  "debug.console.fontSize": 12,
  "debug.console.wordWrap": true,
  "debug.inlineValues": "auto",
  // ////////////////////////////////// //
  //              Linting               //
  // ////////////////////////////////// //
  // TypeScript/JavaScript enhancements
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.quoteStyle": "double",
  "javascript.preferences.quoteStyle": "double",
  // JSON improvements
  "json.validate.enable": true,
  "json.format.keepLines": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Auto-imports
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "editor.formatOnSave": true,
  "workbench.colorTheme": "Default Light Modern",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editor.customLabels.enabled": true,
  "diffEditor.maxComputationTime": 0,
  // ////////////////////////////////// //
  //              Terminal              //
  // ////////////////////////////////// //
  "terminal.integrated.fontFamily": "FiraCode Nerd Font", // Updated from light-theme.json
  "terminal.integrated.cursorStyleInactive": "block",
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "block", // or "block", "line"
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.localEchoStyle": "dim", // in MB
  "terminal.integrated.minimumContrastRatio": 4.5, // for accessibility
  "terminal.integrated.gpuAcceleration": "on", // or "auto", "off"
  "terminal.integrated.windowsEnableConpty": true, // enables modern Windows PTY
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.customGlyphs": true,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.accessibleViewPreserveCursorPosition": true,
  "terminal.integrated.allowChords": true,
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.altClickMovesCursor": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.rightClickBehavior": "selectWord",
  "terminal.integrated.suggest.cdPath": "absolute",
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.inlineSuggestion": "alwaysOnTop",
  "terminal.integrated.suggest.upArrowNavigatesHistory": true,
  "terminal.integrated.suggest.providers": {
    "terminal-suggest": true,
    "pwsh-shell-integration": true
  },
  "terminal.integrated.suggest.quickSuggestions": {
    "commands": "on",
    "arguments": "on",
    "unknown": "off"
  },
  "terminal.integrated.suggest.showStatusBar": true,
  "terminal.integrated.suggest.runOnEnter": "always",
  "terminal.integrated.suggest.suggestOnTriggerCharacters": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.pasteOnRightClick": true,
  "terminal.integrated.defaultProfile.windows": "Developer Command Prompt", // or "Command Prompt", "Git Bash", "PowerShell", "WSL", etc.
  // Add Linux profiles for cross-platform compatibility (from light-theme.json)
  "terminal.integrated.automationProfile.linux": {
    "path": "/usr/bin/zsh",
    "args": ["--login"]
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh",
      "args": ["--login"]
    }
  },
  "terminal.external.linuxExec": "alacritty",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Developer Command Prompt": {
      "path": "C:\\Windows\\System32\\cmd.exe",
      "args": [
        "/k",
