    "button.secondaryHoverBackground": "#70707083", // Hover color for secondary buttons
    "statusBarItem.background": "#505050", // Status bar item background
    "statusBarItem.foreground": "#D4D4D4", // Status bar item text color
    "quickInputButton.background": "#505050", // Background color for buttons in quick input
    "quickInputButton.foreground": "#D4D4D4", // Text color for buttons in quick input
    "quickInputButton.hoverBackground": "#707070", // Hover background for buttons in quick input
    "activityBar.foreground": "#D4D4D4", // Activity Bar icon color (buttons like Extensions)
    "activityBarItem.hoverBackground": "#707070", // Hover color for Activity Bar items
    "activityBarItem.activeBackground": "#404040", // Active color for selected items in Activity Bar
    "focusBorder": "#505050",
    "widget.shadow": "#FFFFFF",
    "input.background": "#FFFFFF",
    "input.foreground": "#727272",
    "input.border": "#FFFFFF",
    "notification.background": "#282828",
    "notification.foreground": "#D4D4D4",
    "notification.errorBackground": "#B00020",
    "dropdown.background": "#FFFFFF",
    "dropdown.foreground": "#D4D4D4",
    "quickInput.background": "#FFFFFF",
    "quickInput.foreground": "#D4D4D4",
    "editorHoverWidget.background": "#FFFFFF",
    "editorHoverWidget.border": "#505050",
    "statusBarItem.remoteBackground": "#FFFFFF",
    "statusBarItem.remoteForeground": "#ccc",
    "textLink.foreground": "#737373", // Color of the links (such as "Open in Editor")
    "textLink.activeForeground": "#D4D4D4", // Color of the link when clicked or active
    "editorCursor.foreground": "#3737373c", // Cursor color
    "editorLineNumber.activeForeground": "#555555",
    "editorSuggestWidget.background": "#FFFFFF", // Autocomplete hover
    "editor.findMatchBackground": "#DEDEDE", // Color for the currently selected search match
    "editor.findMatchHighlightBackground": "#dededeed", // Color for other matches
    "editor.findRangeHighlightBackground": "#dededeed", // Color for the search range highlight
    "editor.rangeHighlightBackground": "#cbcbcb48", // Highlight the line of the first matched search result
    "peekViewEditor.background": "#eeeeee", // Used in "Go to Definition" popups
    "peekViewEditor.matchHighlightBackground": "#555555", // Highlighted text
