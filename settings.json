    "statusBar.foreground": "#D4D4D4", // Status bar text color
    "statusBarItem.hoverBackground": "#37373713", // Hover color for status bar items
    "statusBarItem.activeBackground": "#37373713", // Active status bar item background
    "statusBar.remoteBackground": "#FFFFFF", // Remote status bar background
    "statusBar.remoteForeground": "#ccc", // Remote status bar text color
    "button.background": "#37373748", // All button backgrounds
